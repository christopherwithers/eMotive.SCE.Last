@using eMotive.Models.Objects.Account
@using Microsoft.Owin.Security

@model Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
     <h2>Login</h2>
 </div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-error" style="font-size: 130%;"> 
        <a class="close" data-dismiss="alert">×</a> 
        <h5 class="alert-heading">Warning</h5>
        @Html.ValidationSummary(false)
    </div>
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class="form-horizontal"}))
{ 
  <div class="control-group">
    <label class="control-label" for="UserName">Username</label>
    <div class="controls">
        @Html.TextBoxFor(m => m.UserName, new {placeholder="Username"})
    </div>
  </div>
  <div class="control-group">
    <label class="control-label" for="Password">Password</label>
    <div class="controls">
        @Html.PasswordFor(m => m.Password, new {placeholder="Password"})
    </div>
  </div>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe) Remember me
            </label>
            <button type="submit" class="btn">Sign in</button>
            <div>@Html.ActionLink("Forgot my username", "UsernameReminder")</div>
            <div>@Html.ActionLink("Forgot my password", "ResendPassword")</div>
        </div>
    </div>


}